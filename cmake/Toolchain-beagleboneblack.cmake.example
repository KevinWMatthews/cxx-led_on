# To cross-compile, load a Toolchain file using:
# cmake -DCMAKE_TOOLCHAIN_FILE=<toolchain_filename>

# Set this to be specific to your system
set(BBB_TOOLCHAIN_PATH /usr/src/toolchain/)

set(CMAKE_SYSTEM_NAME "Linux")
set(CMAKE_SYSTEM_PROCESSOR arm)

set(CMAKE_C_COMPILER "${BBB_TOOLCHAIN_PATH}/bin/arm-linux-gnueabihf-gcc")
set(CMAKE_CXX_COMPILER "${BBB_TOOLCHAIN_PATH}/bin/arm-linux-gnueabihf-c++")

set(CMAKE_FIND_ROOT_PATH ${BBB_TOOLCHAIN_PATH})
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
